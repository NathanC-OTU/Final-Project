<div class="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form class="form" method="post">

            <div class="form group">
                <label for="nameTextField">Name<label>
                <input type ="text" class="form-control"
                id="nameTextField"
                placeholder="Enter Name"
                name="name" required>
            </div>

            <div class="form group">
                <label for="companyTextField">Company<label>
                <input type ="text" class="form-control"
                id="companyTextField"
                placeholder="Enter Company"
                name="name" required>
            </div>

            <div class="form group">
                <label for="incidentDateTextField">Date of Incident<label>
                <input type ="text" class="form-control"
                id="incidentDateTextField"
                placeholder="Enter Date of Incident"
                name="name" required>
            </div>

            <div class="form group">
                <label for="nameTextField">Date of Submission<label>
                <input type ="date" class="form-control"
                id="submissionTextField"
                placeholder="Enter Date of Submission"
                name="name" required>
            </div>

            <div class="form group">
                <label for="nameTextField">Type of Incident<label>
                <input type ="text" class="form-control"
                id="incidentTypeTextField"
                placeholder="Enter Type of Incident"
                name="name" required>
            </div>

            <div class="form group">
                <label for="nameTextField">Severity<label>
                <input type ="number" class="form-control"
                id="severityTextField"
                placeholder="Enter Severity"
                name="name" min="0" max="10" step="1"required>
            </div>

